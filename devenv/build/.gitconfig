[difftool]
    prompt = false
    # Be able to abort all diffs with `:cq` or `:cquit`
    trustExitCode = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[credential]
    helper = cache
[init]
    defaultBranch = main
[core]
    editor = nvim
    initDefaultBranch = main
[user]
    name = Fabian Bardos
    email = fabian@bardos.dev
    signingkey = ~/.ssh/ed25519.pub
[gpg]
    format = ssh
[commit]
    gpgsign = true
[alias]
    s = status
    l = log --all --graph --name-status --date-order
